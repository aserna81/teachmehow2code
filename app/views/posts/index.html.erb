<div class="page-header">
<h1>All posts</h1>
<%= link_to 'New Post', new_post_path, class:"btn btn-success" %> 
</div>

<% @posts.each do |post| %>
<div class="post">
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <strong><%= post.title %></strong>
      <p><%= post.body %></p>
      <div class="meta">
          <%= link_to time_ago_in_words(post.created_at) + " ago", post %>
      </div>
    </div>  
    <div class="col-xs-6 col-md-4">
        <%= link_to 'Show', post, class:"btn btn-info" %>
        <div class="admin">
          <%= link_to 'Edit', edit_post_path(post), class:"btn btn-info" %>
          <%= link_to 'Destroy', post, class:"btn btn-info", method: :delete, data: { confirm: 'Are you sure?' } %>  
        </div>
    </div>
  </div>
</div>

<% end %>



